@model PollCollectionViewModel
<h2>On attend ton avis...</h2>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>Question</th>
            <th>Temps restant</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NewPolls)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RemainingTime)
                </td>
                <td style="width:20%">
                    <a asp-action="Vote" asp-route-pollId="@item.Id">Voter</a>
                </td>
            </tr>
        }
    </tbody>
</table>