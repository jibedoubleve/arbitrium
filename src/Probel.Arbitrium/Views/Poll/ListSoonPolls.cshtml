@model IEnumerable<Poll>
<h2>Bientôt...</h2>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Question</th>
            <th scope="col">Démarre dans...</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @if (item.IsOpen)
                    {
                        @Html.DisplayFor(modelItem => item.RemainingTimeBeforeStart)
                    }
                </td>
                <td style="width:20%">
                    <a asp-action="Choices" asp-route-pollId="@item.Id">Choix</a>
                </td>
            </tr>
        }
    </tbody>
</table>