@model UserRoleViewModel
<h2>Changer le rôle</h2>
<hr />
<form asp-action="UpdateRole" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Login</label>
        <input class="form-control" disabled value="@Model.UserName" />
        <input asp-for="UserName" class="form-control" hidden />
        <input asp-for="UserId" class="form-control" hidden />
    </div>
    <div class="form-group">
        @for (int i = 0; i < Model.UserRoles.Count(); i++)
        {
            <div class="form-check">
                <input asp-for="@Model.UserRoles[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model.UserRoles[i].Name" class="form-check-label">@Model.UserRoles[i].Name</label>
                @Html.HiddenFor(m => m.UserRoles[i].Name)
            </div>
        }
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Mettre à jour" />
        <a asp-action="ListUsers" class="btn btn-default">Annuler</a>
    </div>
</form>
