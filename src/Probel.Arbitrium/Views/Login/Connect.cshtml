@model LoginViewModel
<h2>Connexion</h2>
<hr />
@if (ViewData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewData["Message"]
    </div>
}
<form asp-action="Connect" method="post">
    <div class="form-group">
        <input asp-for="Login" class="form-control" placeholder="Login" />
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control" placeholder="Mot de passe" type="password" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Connexion" />
        @if (Model.Configuration.IsRegistrationEnabled)
        {
            <a asp-action="Create" class="btn btn-lg btn-link btn-block">Inscription</a>
        }
    </div>
    @Html.HiddenFor(model => model.Configuration.IsRegistrationEnabled)
</form>
