@model NewLoginViewModel
<h2>Register</h2>
<hr />
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Nom</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Login" class="control-label">Email</label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Mot de passe</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirmation" class="control-label">Confirmation mot de passe</label>
        <input asp-for="PasswordConfirmation" class="form-control" />
        <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Créer" />
        <a asp-action="Connect" class="btn btn-default">Annuler</a>
    </div>
</form>

